<section id="articles">
  <%
    var visibleArticles = articles.slice(0, 3);
    visibleArticles.forEach(function (article) {
  %>
    <article class="post">
      <header>
        <h1><a href="<%= article.path %>"><%= article.title %></a></h1>
        <span class="date"><%= article.date %></span>
      </header>

      <section class="content">
        <%= article.summary %>
      </section>
      <div class="more"><a href="<%= article.path %>">read on &raquo;</a></div>
    </article>
  <%
    });
  %>
</section>
